<div><%= link_to "編集", edit_admin_recipe_path(@recipe.id) %></div>
<div><%= link_to '削除',admin_recipe_path(@recipe.id), method: :delete, "data-confirm" => "本当に消しますか？" %></div>

<h2><%= @recipe.title %></h2>
<p><%= @recipe.user.nickname %></p>
<div><%= simple_format(@recipe.description) %></div>

<% @recipe.recipe_mikans.each do |rm| %>
  <p><%= "#{rm.mikan.mikan_name} / #{rm.amount}" %></p>
<% end %>

<% @recipe.ingredients.each do |ing| %>
  <p><%= "#{ing.content} / #{ing.quantity}" %></p>
<% end %>

<div class="steps">
  <% @recipe.steps.each do |step| %>
    <div class="step"></div>
    <div><%= simple_format(step.direction) %></div>
    <div>
      <% if step.images.length > 0 %>
      <% step.images.each do |image| %>
        <%= image_tag image, size: "200x200" %>
      <% end %>  
      <% else %>
        <%= image_tag 'l_e_others_501', size: "200x200" %>
      <% end %>      
    </div>
  <% end %>
</div>

<h3>Tags --></h3>
<ul>
  <%# 該当のPostからアソシエーションでタグを取得 %>
  <% @recipe.tags.each do |tag| %>
    <%# タグを展開 %>
    <li>
      <%= tag.name %>
    </li>
  <% end %>
</ul>

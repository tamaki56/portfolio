<div class="container">
  <div class="row-mx-auto">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h2><%= @user.name %>さんの詳細画面</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>名前</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.nickname %></td>
            <td><%= @user.email %></td>
            <td>
              <%= link_to edit_admin_user_path(@user.id) do %>
                <i class="far fa-edit"></i>
              <% end %>/
              <%= link_to admin_user_path(@user.id), method: :delete, "data-confirm" => "本当に消しますか？" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      
      <h2><%= @user.name %>さんが投稿したレシピ</h2>
      <% @recipes.each do |recipe| %>
      <div>
        <%= link_to admin_recipe_path(recipe.id) do %>
          <% if recipe.image.attached? %>
              <%= image_tag recipe.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'l_e_others_501', size: "200x200" %><br>
          <% end %>          
          <%= recipe.title %>
        <% end %>  
      </div>
      <% end %>
    </div>
  </div>
</div>



<h1><%= @user.name %>さんの詳細画面</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.nickname %></td>
      <td><%= @user.email %></td>
      <td>
        <%= link_to "編集",edit_admin_user_path(@user.id) %>
        <%= link_to "削除",admin_user_path(@user.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
      </td>
    </tr>
  </tbody>
</table>


<h2><%= @user.name %>さんが投稿したレシピ</h2>
<% @recipes.each do |recipe| %>
<div>
  <%= link_to admin_recipe_path(recipe.id) do %>
    <% if recipe.image.attached? %>
        <%= image_tag recipe.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'l_e_others_501', size: "200x200" %><br>
    <% end %>          
    <%= recipe.title %>
  <% end %>  
</div>
<% end %>


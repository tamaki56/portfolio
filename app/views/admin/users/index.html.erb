<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12">
      <h2>ユーザー一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>名前</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |user| %>
          <tr>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>

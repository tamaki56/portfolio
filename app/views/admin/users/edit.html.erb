<div class="container">
  <div class="row-max-auto">
    <div class="col-lg-10 col-md-10 col-sm-12">
      <h2><%= @user.name %>さんの編集画面</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local: true do |f| %>
        <div class="row mb-3">
          <label for="inputEmail3" class="col-4 col-form-label">名前</label>
          <div class="col-5">
            <%= f.text_field :name %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-4 col-form-label">ニックネーム</label>
          <div class="col-5">
            <%= f.text_field :nickname %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-4 col-form-label">メールアドレス</label>
          <div class="col-5">
            <%= f.text_field :email %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.submit "変更",class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

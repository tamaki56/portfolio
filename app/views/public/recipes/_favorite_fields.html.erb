<% if user_signed_in? %>
  <% if !Favorite.exists?(user_id: current_user.id, recipe_id: recipe.id) %>
    <%= link_to recipe_favorites_path(recipe.id), method: :post, remote: true, class:"like-btn" do %>
      <i class="fas fa-thumbs-up"></i>
    <% end %>
    <span class="star-count1"><%= recipe.favorites.count %></span>
  <% else %>
    <%= link_to recipe_favorites_path(recipe_id: recipe.id, id: recipe.favorites[0].id), method: :delete, remote: true, class:"like-btn" do %>
      <i class="fas fa-thumbs-up"></i>
    <% end %>
    <span class="star-count2"><%= recipe.favorites.count %></span>
  <% end %>
<% else %>
  <i class="fas fa-thumbs-up"></i>
  <span class="star-count2"><%= recipe.favorites.count %></span>
<% end %>
<div class="mikan-head">
  <%= image_tag 'bg_top-left02_pc.png', class: 'mikan-image' %>
  <div style="margin: -40px auto;" ><%= image_tag 'おばあちゃんの.png', class: 'head-img' %></div>
  <%= image_tag 'bg_top-right02_pc.png', class: 'mikan-image' %>
</div>

<div class="sign-in">
  
  <h2>ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email,"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :password,"パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,"覚えていますか?" %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  <p>会員登録がお済みでない方</p>
  <%= render "public/shared/links" %>
</div>

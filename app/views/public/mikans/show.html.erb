<div class="mikan-name">
  <%= @mikan.mikan_name %>
</div>

<div class="mikan-img">
  <% if @mikan.images.length > 1 %>
    <%= image_tag @mikan.images.second,class: "mikan-img-2" %>
  <% else %>
    <%= image_tag 'l_e_others_501',class: "mikan-img-no-2" %>
  <% end %>
</div>

<div class="box26">
    <span class="box-title">特徴</span>
    <p><%= @mikan.introduction %></p>
</div>

<div class="box26">
    <span class="box-title">価格</span>
    <p><%= @mikan.price %></p>
</div>

<div class="box26">
    <span class="box-title">甘味</span>
    <p><%= @mikan.sweetness %></p>
</div>   

<div class="box26">
    <span class="box-title">時期</span>
    <p><%= @mikan.season %></p>
</div> 

<div class="mikan-show">
  <div class="balloon5">
    <div class="faceicon">
      <%= image_tag 'New file (1).png',class: "gm-img" %>
    </div>

     <div class="chatting">
      <div class="says">
        <label for="tip">豆知識</label>
        <p><%= @mikan.tip_title %></p>
        <p><%= @mikan.tip %></p>
      </div>
     </div> 
     
  </div>
</div>

<div class="tip-img">
  <% if @mikan.images.length > 2 %>
      <%= image_tag @mikan.images.third,class: "mikan-img-3" %>
  <% else %>
    <%= image_tag 'l_e_others_501',class:  "mikan-img-no-3" %>
  <% end %>
</div>